<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ngm_logo"
            tools:ignore="ContentDescription"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_white"
            android:textSize="36sp"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                style="@style/IntroTip"
                android:drawableLeft="@drawable/point_yellow"
                android:drawableStart="@drawable/point_yellow"
                android:text="@string/intro1_1"/>

            <TextView
                style="@style/IntroTip"
                android:drawableLeft="@drawable/point_indigo"
                android:drawableStart="@drawable/point_indigo"
                android:text="@string/intro1_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/IntroTip"
                android:drawableLeft="@drawable/point_blue"
                android:drawableStart="@drawable/point_blue"
                android:text="@string/intro1_3"/>

            <TextView
                style="@style/IntroTip"
                android:drawableLeft="@drawable/point_red"
                android:drawableStart="@drawable/point_red"
                android:text="@string/intro1_4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>